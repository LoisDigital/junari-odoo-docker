{
    // This configuration is meant to be used inside the odoo-service
    // container created by the docker-compose-dev.yml file.
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run Odoo",
            "type": "debugpy",
            "request": "launch",
            "cwd": "${workspaceRoot}",
            "program": "${workspaceRoot}/odoo/odoo-bin",
            "args": [
                "--database=development",
                "--init=customize",
                // "--dev=xml,qweb",
                "--config=/etc/odoo/odoo.conf",
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "Run tests",
            "type": "debugpy",
            "request": "launch",
            "cwd": "${workspaceRoot}",
            "program": "${workspaceRoot}/odoo/odoo-bin",
            "args": [
                "--database=development",
                "--dev=xml,qweb",
                "--config=/etc/odoo/odoo.conf",
                "--test-tags=.test_01_pos_inlane_tour",
                // "--screencasts=/tmp",
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "Update module",
            "type": "debugpy",
            "request": "launch",
            "cwd": "${workspaceRoot}",
            "program": "${workspaceRoot}/odoo/odoo-bin",
            "args": [
                "--database=development",
                "--dev=xml,qweb",
                "--config=/etc/odoo/odoo.conf",
                "--update=pos_numpad_ext",
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "Install module",
            "type": "debugpy",
            "request": "launch",
            "cwd": "${workspaceRoot}",
            "program": "${workspaceRoot}/odoo/odoo-bin",
            "args": [
                "--database=development",
                "--dev=xml,qweb",
                "--config=/etc/odoo/odoo.conf",
                "--init=pos_numpad_ext",
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "Init DB",
            "type": "debugpy",
            "request": "launch",
            "cwd": "${workspaceRoot}",
            "program": "${workspaceRoot}/odoo/odoo-bin",
            "args": [
                "--dev=xml,qweb",
                "--config=/etc/odoo/odoo.conf",
                //"--load-language=fr_FR",
                "--init=development",
                "--database=development",
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "Scaffold",
            "type": "debugpy",
            "request": "launch",
            "cwd": "${workspaceRoot}",
            "program": "${workspaceRoot}/odoo/odoo-bin",
            "args": [
                "scaffold",
                "acd_website",
                "/opt/odoo/custom_addons/loistalagrand"
            ],
            "console": "integratedTerminal"
        },
    ]
}